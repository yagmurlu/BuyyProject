@using EntityLayer.Concrete
@model List<Product>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div id="bannerCorousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/img/indirim.png" alt="...">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/img/indirim4.png" alt="...">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/img/indirim5.png" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#bannerCorousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#bannerCorousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- Urunler Kismi -->
<div class="col-10 container-fluid" style="padding: 20px 0px;">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @for (int i = 0; i < Model.Count; i++)
            {
                Product item = Model.ElementAt(i);
                <div class="col">
                    <div class="card h-100">

                        <!-- Image Corousels: -->
                        <div id="carouselP_@i" class="carousel slide carousel-fade" data-bs-interval="false">
                            <div class="carousel-inner">
                                @for (int j = 0; j < item.Images.Count; j++)
                                {
                                    Image image = item.Images.ElementAt(j);

                                    <div class="carousel-item @(j == 0 ? "active" : "")">
                                        <img src="@image.Url" class="d-block"
                                             style="width: 100%"
                                             alt="@image.Alternate">
                                    </div>
                                }
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselP_@i" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselP_@i" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>


                        <div class="card-body d-flex align-items-start flex-column">
                            <p class="card-text mb-auto">@item.Name</p>
                            <h4>@item.ProductPrice.ToString("0.00") ₺</h4>
                            <a href="#" class="btn btn-primary" style="bottom: 0px !important;">Ürünü İncele</a>
                        </div>
                    </div>
                </div>
            }
    </div>
</div>




