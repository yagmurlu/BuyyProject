@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Kategori Düzenleme Sayfası</h2>

@using (Html.BeginForm("EditCategory", "AdminCategory", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Kategori ID:")
    @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })
    <br /><br />
    @Html.Label("Kategori Adı:")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br /><br />
    @*@Html.Label("Kategori Durumu")
    @Html.TextBoxFor(x => x.CategoryStatus, new { @class = "form-control" })*@

    <form>
        @Html.Label("Kategori Durumu:")
        <br />
        <input type="radio" name="CategoryStatus" value="True" >Aç(Varsayılan)<br>
        <input type="radio" name="CategoryStatus" value="False">Kapat<br>
        <br>
    </form>
    <button class="btn btn-success">Güncelle</button>
</div>
}