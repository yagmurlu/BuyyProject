        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
        @Html.Label("Açıklama:")
        @Html.TextBoxFor(x => x.ProductDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ProductDescription, "", new { @class = "text-danger" })
        @Html.Label("Fiyat:")
        @Html.TextBoxFor(x => x.ProductPrice, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ProductPrice, "", new { @class = "text-danger" })
