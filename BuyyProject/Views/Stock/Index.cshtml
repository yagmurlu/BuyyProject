@using EntityLayer.Concrete
@model List<Stock>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h3 style="margin-left:40%;color:crimson">Stok Durumu</h3>
<a href="/Stock/AddStock" class="btn btn-info" style="margin-left:85%;padding:15px">Yeni Stock</a>
<br />
<br />
<table class="table table-hover" style="background-color:lightgoldenrodyellow">

    <tr style="background-color:crimson;color:white">
        <th>#</th>
        <th>Toplam Stock</th>
        <th>Ürün Id-Adı</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.StockID</td>
    <td>@item.StockQuantity</td>
    <td>@item.ProductId - @item.Product.Name</td>

    <td><a href="/Stock/EditStock/@item.StockID" class="btn btn-warning">Güncelle</a></td>
    <td>
        <div class="container">
            <!-- Button to Open the Modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal"
                    data-target="#myModal" data-todelete="/Stock/DeleteStock/@item.StockID">
                SİL
            </button>

            <!-- The Modal -->
            <div class="modal" id="myModal">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title">Silmek İstedğinizden Emin Misiniz?</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>

                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <a id="btn-delete" href="" class="btn btn-danger">Sil</a>
                            @*<button type="button" class="btn btn-danger" data-dismiss="modal" href="/AdminCategory/DeleteCategory/@item.CategoryID">Sil</button>*@
                        </div>
                        @*<a ></a>*@
                    </div>
                </div>
            </div>

            <script>
 //Modal Script
                        $('#myModal').on('show.bs.modal', function (event) {
                            var button = $(event.relatedTarget)
                            var recipient = button.data('todelete')

                            var modal = $(this)
                            modal.find('#btn-delete').attr("href", recipient)
                            modal.find('.modal-body input').val(recipient)
                        })
            </script>

        </div>
    </td>
</tr>
    }


</table>


